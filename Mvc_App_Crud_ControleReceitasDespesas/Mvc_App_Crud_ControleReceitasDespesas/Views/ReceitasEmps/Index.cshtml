@model IEnumerable<Mvc_App_Crud_ControleReceitasDespesas.Models.ReceitasEmp>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nova Receita", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Busque por Data ou Categoria : @Html.TextBox("SearchString")
        <input type="submit" value="Buscar" />
    </p>

}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ReceitaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ReceitaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ReceitaId })
        </td>
    </tr>
}

</table>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Ver Relatório de Receitas", "ReceitasReport")
    </p>

}
